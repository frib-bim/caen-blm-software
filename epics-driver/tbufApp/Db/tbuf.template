# Push to FIFO
record(ao, "$(P)PSH_CMD_") {
    field(DTYP, "TBUF Push Sample")
    field(SCAN, "$(SCAN=Event)")
    field(EVNT, "$(EVNT=$(NAME)_100HZ)")
    field(PHAS, "$(PHAS=0)")
    field(OMSL, "closed_loop")
    field(DOL , "$(SRC) MS NPP")
    field(OUT , "@$(P)")
    field(FLNK, "$(FLNK=)")
}


# Settings
record(longout, "$(P)NSAMP_CSET") {
    field(DTYP, "TBUF Set Num Samples")
    field(OUT , "@$(P)")
    field(VAL , "$(NELM=20)")
    field(PINI, "YES")
}

record(ao, "$(P)PRD_CSET") {
    field(DTYP, "TBUF Set Period")
    field(OUT , "@$(P)")
    field(VAL , "$(PERIOD=0.2)")
    field(PREC, "2")
    field(PINI, "YES")
}

# Aggregate
record(ai, "$(P)_RD") {
    field(DTYP, "TBUF Get Sample")
    field(INP , "@$(P) $(Stat=Average)")
    field(SCAN, "I/O Intr")
    field(LINR, "$(LINR=LINEAR)")
    field(ESLO, "$(ESLO=)")
    field(EOFF, "$(EOFF=)")
    field(PREC, "$(PREC=)")
    field(EGU , "$(EGU=)")
    field(MDEL, "$(MDEL=-1)")
    #field(TSE , "-2")
    field(FLNK, "$(P)W_RD")
}

# Full FIFO
record(waveform, "$(P)W_RD") {
    field(DTYP, "TBUF Get Buffer")
    field(INP , "@$(P)")
    field(FTVL, "FLOAT")
    #field(SCAN, "I/O Intr")
    field(NELM, "$(NELM=20)")
    #field(TSE , "-2")
}

record(longout, "$(FPS)FRZDLY_CSET") {
    field(DESC, "Time post MPS fault until Circle Buffer freeze, msec.")
    field(DTYP, "Pico8 User Reg UInt32")
    field(OUT , "@$(NAME) offset=0x30044 mask=0xff000000")
    field(PINI, "YES")
    field(VAL,  "30")
    field(EGU,  "ms")
    info(autosaveFields_pass0, "VAL")
}


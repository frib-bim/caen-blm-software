record(longin, "$(CTRL)MPSRespTime_") {
    field(DTYP, "Pico8 User Reg UInt32")
    field(INP , "@$(NAME) offset=0x30068")
    field(SCAN, ".2 second")
    field(FLNK, "$(CTRL)MPSRespTime")
}
record(ai, "$(CTRL)MPSRespTime") {
    field(DTYP, "Raw Soft Channel")
    field(INP,  "$(CTRL)MPSRespTime_")
    field(ASLO, "8.0e-3")
    field(EGU , "uSec")
    field(HIGH, "10.0")
    field(HSV , "MAJOR")
}


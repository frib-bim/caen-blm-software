file "pico8_eeprom_reg.template" {
pattern
{ P,        R,                  EEPROM, OFFSET, EGU    }
# Ch 0-3, Range 0
{ "$(DEV)", "_CH0:RNG0_EEGAIN", "1",    "0xD5", ""     }
{ "$(DEV)", "_CH1:RNG0_EEGAIN", "1",    "0xDD", ""     }
{ "$(DEV)", "_CH2:RNG0_EEGAIN", "1",    "0xE5", ""     }
{ "$(DEV)", "_CH3:RNG0_EEGAIN", "1",    "0xED", ""     }
{ "$(DEV)", "_CH0:RNG0_EEOFST", "1",    "0xD9", "A"    }
{ "$(DEV)", "_CH1:RNG0_EEOFST", "1",    "0xE1", "A"    }
{ "$(DEV)", "_CH2:RNG0_EEOFST", "1",    "0xE9", "A"    }
{ "$(DEV)", "_CH3:RNG0_EEOFST", "1",    "0xF1", "A"    }

# Ch 0-3, Range 1
{ "$(DEV)", "_CH0:RNG1_EEGAIN", "1",    "0xF5",  ""    }
{ "$(DEV)", "_CH1:RNG1_EEGAIN", "1",    "0xFD",  ""    }
{ "$(DEV)", "_CH2:RNG1_EEGAIN", "1",    "0x105", ""    }
{ "$(DEV)", "_CH3:RNG1_EEGAIN", "1",    "0x10D", ""    }
{ "$(DEV)", "_CH0:RNG1_EEOFST", "1",    "0xF9",  "A"   }
{ "$(DEV)", "_CH1:RNG1_EEOFST", "1",    "0x101", "A"   }
{ "$(DEV)", "_CH2:RNG1_EEOFST", "1",    "0x109", "A"   }
{ "$(DEV)", "_CH3:RNG1_EEOFST", "1",    "0x111", "A"   }

# Ch 4-7, Range 0
{ "$(DEV)", "_CH4:RNG0_EEGAIN", "0",    "0xD5", ""     }
{ "$(DEV)", "_CH5:RNG0_EEGAIN", "0",    "0xDD", ""     }
{ "$(DEV)", "_CH6:RNG0_EEGAIN", "0",    "0xE5", ""     }
{ "$(DEV)", "_CH7:RNG0_EEGAIN", "0",    "0xED", ""     }
{ "$(DEV)", "_CH4:RNG0_EEOFST", "0",    "0xD9", "A"    }
{ "$(DEV)", "_CH5:RNG0_EEOFST", "0",    "0xE1", "A"    }
{ "$(DEV)", "_CH6:RNG0_EEOFST", "0",    "0xE9", "A"    }
{ "$(DEV)", "_CH7:RNG0_EEOFST", "0",    "0xF1", "A"    }

# Ch 4-7, Range 1
{ "$(DEV)", "_CH4:RNG1_EEGAIN", "0",    "0xF5",  ""    }
{ "$(DEV)", "_CH5:RNG1_EEGAIN", "0",    "0xFD",  ""    }
{ "$(DEV)", "_CH6:RNG1_EEGAIN", "0",    "0x105", ""    }
{ "$(DEV)", "_CH7:RNG1_EEGAIN", "0",    "0x10D", ""    }
{ "$(DEV)", "_CH4:RNG1_EEOFST", "0",    "0xF9",  "A"   }
{ "$(DEV)", "_CH5:RNG1_EEOFST", "0",    "0x101", "A"   }
{ "$(DEV)", "_CH6:RNG1_EEOFST", "0",    "0x109", "A"   }
{ "$(DEV)", "_CH7:RNG1_EEOFST", "0",    "0x111", "A"   }
}


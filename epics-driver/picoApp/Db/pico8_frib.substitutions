# For following tbufs
global {
    P="$(DEVCH)$(R)",
    SRC="$(DEVCH)$(R)F_RD",
    PREC="6",
    EGU="uA",
    WEIGHT="$(DEV)_CAP:TON_RSTS",
    IGN_WGH="$(DEVCH)CWBEAM_CSET",
    SCAN="Event",
    EVNT="$(NAME)_100HZ",
    PHAS="1"
}


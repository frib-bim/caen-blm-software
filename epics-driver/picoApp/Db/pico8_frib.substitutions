# Saturation indicators

# "Slow" min/max, based on 5Hz min/max
global {
    DTYP="Soft Channel",
    P="$(DEVCH)S$(R)",
    INP="$(DEVCH)$(R)_RD CP",
    PREC="6",
    EGU="uA",
    NELM="5",
    PERIOD="0.2",
    SCAN="Passive"
}

file "tbuf.template" {
pattern
{ CH, R,     Stat  }
{ 0,  "MIN", "Min" }
{ 1,  "MIN", "Min" }
{ 2,  "MIN", "Min" }
{ 3,  "MIN", "Min" }
{ 4,  "MIN", "Min" }
{ 5,  "MIN", "Min" }
{ 6,  "MIN", "Min" }
{ 7,  "MIN", "Min" }
{ 0,  "MAX", "Max" }
{ 1,  "MAX", "Max" }
{ 2,  "MAX", "Max" }
{ 3,  "MAX", "Max" }
{ 4,  "MAX", "Max" }
{ 5,  "MAX", "Max" }
{ 6,  "MAX", "Max" }
{ 7,  "MAX", "Max" }
}

global {
    RNGSEL="$(DEVCH)RNG_CMD",
    RNG0="$(DEV):EEPROM_RNG0_RD",
    RNG1="$(DEV):EEPROM_RNG1_RD",
    P="$(DEVCH)",
    MIN="$(P)SMIN_RD",
    MAX="$(P)SMAX_RD",
    THRES="1.5"
}

